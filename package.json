{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "check": "prettier --check . && pnpm typecheck && pnpm lint",
    "lint": "eslint .",
    "format": "prettier --write . && pnpm lint --fix",
    "typecheck": "pnpm -r typecheck",
    "dev": "pnpm -r --parallel dev",
